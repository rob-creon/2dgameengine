package com.creon.engine.test.input;

public class InputVirtualJoystick {

	private float x, y;

	public InputVirtualJoystick() {
		this.x = 0.0f;
		this.y = 0.0f;
	}

	public float getX() {
		return x;
	}

	public float getY() {
		return y;
	}

	public void setX(float x) {
		this.x = x;
		this.normalize();
	}

	public void setY(float y) {
		this.y = y;
		this.normalize();
	}

}
